/* pages/index/index.wxss */
.shouye{
  padding:0 20rpx;
  background-color:#fff;
}
.slide-image{
  width:100%;
  height:100%;
  border-radius:10rpx;
}
.details-nav{
  display:flex;
  text-align: center;
  justify-content: space-around;
  margin:20rpx auto;
}
.details-nav view{
  width:100rpx;
  font-size:22rpx;
}
.details-nav view image{
  width:60rpx;
  height:60rpx;
  border-radius:50%;
}
.detail-title{
  display:flex;
  justify-content: space-between;
  font-size:32rpx;
  margin:30rpx 0 20rpx 0;
}
.detail-title .getMore{
  font-size:0.7em;
  color:#ccc;
}
.detail-guess{
  display:flex;
  justify-content: space-between;
}
.detail-guess>view{
  width:30%;
}
.detail-guess .detail-guess-img{
  position:relative;
}
.detail-guess view image,.detail-content view image{
  width:100%;
  height:200rpx;
  border-radius:10rpx;
}
.custom-class{
  border:0;
}
.album-title{
  font-size:.7em;
  padding:5rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.detail-content{
  display:flex;
  padding:20rpx 0;
  border-bottom:1rpx solid rgba(100,100,100,0.2);
}
.detail-content .detail-cover{
  width:30%;
}
.detail-content .detail-context{
  width:70%;
  padding-left:20rpx;
  position:relative;
}
.detail-content .detail-context .album-text{
  font-size:0.6em;
  color:#aaa;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow:hidden;
  text-overflow:ellipsis;
}
.album-count{
  font-size:.6em;
  position:absolute;
  bottom:0;
}
.album-count text{
  margin:0 5rpx; 
}
.detail-guess-img .album-count{
  width:100%;
  background-image:linear-gradient(to bottom,rgba(126, 119, 119,0.5),rgba(66, 60, 60,0.5));
  bottom:10rpx;
  padding:5rpx -10rpx 5rpx 10rpx;
}