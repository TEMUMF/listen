/* pages/classify/classify.wxss */
.classify-page{
  padding:0 20rpx;
}
.l-title{
  font-size:43rpx;
  font-weight:800;
}
.content{
  background-color:#f9f9f9;
  margin:10rpx 0;
  display:flex;
  align-items: center;
}
.m-title{
  width:20%;
  font-size:35rpx;
  font-weight:600;
  text-align:center;
}
.m-title image{
  width:70rpx;
  height:70rpx;
}
.text-hover.active{
  color:#e94921;
}
.s-content{
  width:80%;
}
.classify-title{
  display:flex;
  flex-wrap: wrap;
}
.classify-title .s-title{
  width:20%;
  text-align:center;
  font-size:0.7em;
  padding:10rpx;
  margin:5rpx;
  background-color:#fff;
  border-radius:10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}